<% include  ../include/admin_header %>
<form action="/set_password" method="post" id="set_password_form">
	<input type="password" name="password" placeholder="旧密码"/>
	<input type="password" name="new_password" placeholder="新密码"/>
	<button type="submit">更改</button>
</form>
<% include ../include/javascript %>
<script>
	$('#set_password_form').ajaxForm(function(data) {
		var error = data.error;
		if(error) {
			alert(error);
			return false;
		}
		alert(data.success);
		location.href="/"
	});
</script>
